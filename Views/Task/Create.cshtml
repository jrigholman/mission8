@model mission8.Models.TaskAppModel

<h2>Add New Task</h2>

<form asp-action="Create" method="post">
    
    <div class="form-group">
        <label asp-for="TaskName" class="control-label"></label>
        <input asp-for="TaskName" class="form-control" required />
        <span asp-validation-for="TaskName" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label asp-for="DueDate" class="control-label"></label>
        <input asp-for="DueDate" type="date" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label asp-for="Quadrant" class="control-label"></label>
        <select asp-for="Quadrant" class="form-control" required>
            
            <option value="1">Quadrant 1 - Urgent & Important</option>
            <option value="2">Quadrant 2 - Not Urgent but Important</option>
            <option value="3">Quadrant 3 - Urgent but Not Important</option>
            <option value="4">Quadrant 4 - Not Urgent & Not Important</option>
        </select>
        <span asp-validation-for="Quadrant" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" class="form-control" required>
            
            <option value="1">Home</option>
            <option value="2">School</option>
            <option value="3">Work</option>
            <option value="4">Church</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    
    <div class="form-group form-check">
        <input asp-for="Completed" class="form-check-input" type="checkbox" />
        <label asp-for="Completed" class="form-check-label">Completed</label>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Task</button>
    </div>
</form>

<a asp-action="Index">Back to List</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}