@{
    ViewData["Title"] = "Add Task";
}
@model Mission08_Group.Models.EditTask

<h1>@ViewData["Title"]</h1>

<form>
    <label asp-for="TaskName">Task</label>
    <input asp-for="TaskName"/>
    <br>
    <label asp-for="DueDate">Due Date</label>
    <input asp-for="DueDate"/>
    <br>
    <label asp-for="Quadrant">Quadrant</label>
    <input asp-for="Quadrant"/>
    <br>
    <label asp-for="Category">Category</label>
    <select asp-for="Category">
        <option>Home</option>
        <option>School</option>
        <option>Work</option>
        <option>Church</option>
    </select>
    <br>
    <label asp-for="Completed">Completed</label>
    <select asp-for="Completed">
        <option>Yes</option>
        <option>No</option>
    </select>
    <br/>
    <button type="submit">Submit Task</button>
</form>