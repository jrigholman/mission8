@model mission8.Models.EditTask

<h2>Edit Task</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TaskId" />

    <label>Task Name</label>
    <input asp-for="TaskName" class="form-control" />

    <label>Due Date</label>
    <input asp-for="DueDate" class="form-control" type="date" />

    <label>Category</label>
    <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" class="form-control"></select>

    <label>Quadrant</label>
    <select asp-for="Quadrant" asp-items="Html.GetEnumSelectList<mission8.Models.QuadrantType>()" class="form-control"></select>

    <label>Completed</label>
    <input asp-for="Completed" type="checkbox" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>
