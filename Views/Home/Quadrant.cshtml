@model TModel

@{
    ViewData["Title"] = "Quadrants View";
}

<h2 class="text-center">Task Quadrants</h2>

<div class="container">
    <div class="row">
        <!-- Quadrant 1 -->
        <div class="col-md-6">
            <h3 class="text-danger">Urgent & Important</h3>
            <div class="list-group">
                @foreach (var task in Model.Where(t => t.Quadrant == 1 && !t.Completed))
                {
                    <div class="list-group-item">
                        <h5>@task.Name</h5>
                        <p>Due: @(task.DueDate?.ToShortDateString() ?? "No due date")</p>
                        <p>Category: @task.Category.Name</p>
                        <button class="btn btn-success btn-sm" onclick="markCompleted(@task.Id)">Complete</button>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            </div>
        </div>

        <!-- Quadrant 2 -->
        <div class="col-md-6">
            <h3 class="text-primary">Not Urgent but Important</h3>
            <div class="list-group">
                @foreach (var task in Model.Where(t => t.Quadrant == 2 && !t.Completed))
                {
                    <div class="list-group-item">
                        <h5>@task.Name</h5>
                        <p>Due: @(task.DueDate?.ToShortDateString() ?? "No due date")</p>
                        <p>Category: @task.Category.Name</p>
                        <button class="btn btn-success btn-sm" onclick="markCompleted(@task.Id)">Complete</button>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Quadrant 3 -->
        <div class="col-md-6">
            <h3 class="text-success">Urgent but Not Important</h3>
            <div class="list-group">
                @foreach (var task in Model.Where(t => t.Quadrant == 3 && !t.Completed))
                {
                    <div class="list-group-item">
                        <h5>@task.Name</h5>
                        <p>Due: @(task.DueDate?.ToShortDateString() ?? "No due date")</p>
                        <p>Category: @task.Category.Name</p>
                        <button class="btn btn-success btn-sm" onclick="markCompleted(@task.Id)">Complete</button>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            </div>
        </div>

        <!-- Quadrant 4 -->
        <div class="col-md-6">
            <h3 class="text-secondary">Not Urgent & Not Important</h3>
            <div class="list-group">
                @foreach (var task in Model.Where(t => t.Quadrant == 4 && !t.Completed))
                {
                    <div class="list-group-item">
                        <h5>@task.Name</h5>
                        <p>Due: @(task.DueDate?.ToShortDateString() ?? "No due date")</p>
                        <p>Category: @task.Category.Name</p>
                        <button class="btn btn-success btn-sm" onclick="markCompleted(@task.Id)">Complete</button>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function markCompleted(taskId) {
        fetch('/Tasks/MarkCompleted/' + taskId, { method: 'POST' })
            .then(() => location.reload())
            .catch(err => console.log(err));
    }
</script>